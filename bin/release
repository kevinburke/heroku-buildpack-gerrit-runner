#!/usr/bin/env bash
# bin/release <build-dir>

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
BUILD_DIR=$1

chmod 755 "$BIN_DIR/gerrit.sh"
mkdir -p "$BUILD_DIR/bin"
cp -a "$BIN_DIR/gerrit.sh" "$BUILD_DIR/bin/"

# gerrit basePath
mkdir -p "$BUILD_DIR/cache"
mkdir -p "$BUILD_DIR/data"
mkdir -p "$BUILD_DIR/git"
mkdir -p "$BUILD_DIR/index"
mkdir -p "$BUILD_DIR/logs"

cat <<EOF
---
config_vars:
  PATH: /app/.jdk/bin:/usr/local/bin:/usr/bin:/bin
  JAVA_HOME: /app/.jdk
  JAVA_OPTS: -Xmx384m -Xss512k -XX:+UseCompressedOops
  MAVEN_OPTS: -Xmx384m -Xss512k -XX:+UseCompressedOops
  START_STOP_DAEMON: 0

default_process_types:
  web: bash bin/gerrit.sh status && java -jar ${BUILD_DIR}/bin/gerrit.war reindex -d /app && bash bin/gerrit.sh run
EOF
