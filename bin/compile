#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
# parse args
BUILD_DIR=$1
CACHE_DIR=$2

# include .files when moving things around
shopt -s dotglob

echo "Gerrit runner:"
echo "  build: $BUILD_DIR"
echo "  cache: $CACHE_DIR"

echo -n "-----> Running gerrit-runner ... "
echo "/app:"
ls -la /app
echo "------"
echo "$BUILD_DIR:"
ls -la $BUILD_DIR
echo "JAVA_HOME: $JAVA_HOME"

cd $BUILD_DIR

if [ ! -f Procfile ]; then
  cat > Procfile <<EOF
web: sh bin/gerrit.sh start
EOF
fi
